{% extends 'base.html.twig' %}

{% block title %}Task Management - Tasker{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 text-primary">
                    <i class="fas fa-list-check"></i> Task Management
                </h1>
                <a href="{{ path('app_task_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Task
                </a>
            </div>
        </div>
    </div>

    {# Display flash messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'success' ? 'success' : (type == 'error' ? 'danger' : 'info') }} alert-dismissible fade show" role="alert">
                <i class="fas fa-{{ type == 'success' ? 'check-circle' : (type == 'error' ? 'exclamation-triangle' : 'info-circle') }}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-table"></i> Tasks Overview
                <span class="badge bg-primary ms-2">{{ tasks|length }}</span>
            </h5>
        </div>
        <div class="card-body p-0">
            {% if tasks|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <a href="{{ path('app_task_index', {sort: 'id', direction: currentSort == 'id' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                                       class="text-decoration-none text-dark fw-semibold d-flex align-items-center"
                                       style="cursor: pointer;"
                                       onmouseover="this.style.color='#0d6efd';" 
                                       onmouseout="this.style.color='';">
                                        <i class="fas fa-hashtag text-muted me-1"></i> ID
                                        {% if currentSort == 'id' %}
                                            <i class="fas fa-chevron-{{ currentDirection == 'ASC' ? 'up' : 'down' }} text-primary ms-2"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th class="border-0">
                                    <a href="{{ path('app_task_index', {sort: 'title', direction: currentSort == 'title' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                                       class="text-decoration-none text-dark fw-semibold d-flex align-items-center"
                                       style="cursor: pointer;"
                                       onmouseover="this.style.color='#0d6efd';" 
                                       onmouseout="this.style.color='';">
                                        <i class="fas fa-heading text-muted me-1"></i> Title
                                        {% if currentSort == 'title' %}
                                            <i class="fas fa-chevron-{{ currentDirection == 'ASC' ? 'up' : 'down' }} text-primary ms-2"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th class="border-0">
                                    <a href="{{ path('app_task_index', {sort: 'description', direction: currentSort == 'description' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                                       class="text-decoration-none text-dark fw-semibold d-flex align-items-center"
                                       style="cursor: pointer;"
                                       onmouseover="this.style.color='#0d6efd';" 
                                       onmouseout="this.style.color='';">
                                        <i class="fas fa-align-left text-muted me-1"></i> Description
                                        {% if currentSort == 'description' %}
                                            <i class="fas fa-chevron-{{ currentDirection == 'ASC' ? 'up' : 'down' }} text-primary ms-2"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th class="border-0">
                                    <a href="{{ path('app_task_index', {sort: 'isCompleted', direction: currentSort == 'isCompleted' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                                       class="text-decoration-none text-dark fw-semibold d-flex align-items-center"
                                       style="cursor: pointer;"
                                       onmouseover="this.style.color='#0d6efd';" 
                                       onmouseout="this.style.color='';">
                                        <i class="fas fa-check-circle text-muted me-1"></i> Status
                                        {% if currentSort == 'isCompleted' %}
                                            <i class="fas fa-chevron-{{ currentDirection == 'ASC' ? 'up' : 'down' }} text-primary ms-2"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th class="border-0">
                                    <a href="{{ path('app_task_index', {sort: 'createdAt', direction: currentSort == 'createdAt' and currentDirection == 'ASC' ? 'DESC' : 'ASC'}) }}" 
                                       class="text-decoration-none text-dark fw-semibold d-flex align-items-center"
                                       style="cursor: pointer;"
                                       onmouseover="this.style.color='#0d6efd';" 
                                       onmouseout="this.style.color='';">
                                        <i class="fas fa-calendar text-muted me-1"></i> Created
                                        {% if currentSort == 'createdAt' %}
                                            <i class="fas fa-chevron-{{ currentDirection == 'ASC' ? 'up' : 'down' }} text-primary ms-2"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th class="border-0 text-center"><i class="fas fa-cogs text-muted"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                            <tr class="{% if task.isCompleted %}table-success{% endif %}">
                                <td class="fw-bold text-muted">#{{ task.id }}</td>
                                <td>
                                    <div class="fw-semibold">{{ task.title }}</div>
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;" title="{{ task.description }}">
                                        {{ task.description|length > 50 ? task.description|slice(0, 50) ~ '...' : task.description }}
                                    </div>
                                </td>
                                <td>
                                    {% if task.isCompleted %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Completed
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-muted small">
                                    {{ task.createdAt ? task.createdAt|date('M j, Y') : 'N/A' }}
                                    <br>
                                    <small class="text-muted">{{ task.createdAt ? task.createdAt|date('H:i') : '' }}</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Task actions">
                                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-info btn-sm" title="View Task">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-primary btn-sm" title="Edit Task">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-inbox fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted">No tasks found</h5>
                    <p class="text-muted">Get started by creating your first task!</p>
                    <a href="{{ path('app_task_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your First Task
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    {% if tasks|length > 0 %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle"></i> Danger Zone
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1 text-danger">Delete All Tasks</h6>
                                <p class="text-muted small mb-0">This will permanently delete all {{ tasks|length }} tasks. This action cannot be undone.</p>
                            </div>
                            <form method="post" action="{{ path('app_task_delete_all') }}" class="ms-3"
                                  onsubmit="return confirm('⚠️ WARNING: You are about to delete ALL {{ tasks|length }} tasks!\n\nThis action is PERMANENT and cannot be undone.\n\nType YES to confirm: ') && prompt('Please type YES to confirm:') === 'YES'">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_all_tasks') }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete All Tasks
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
