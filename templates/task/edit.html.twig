{% extends 'base.html.twig' %}

{% block title %}Edit Task #{{ task.id }} - Tasker{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 text-primary">
                    <i class="fas fa-edit"></i> Edit Task #{{ task.id }}
                </h1>
                <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tasks"></i> Task Information
                    </h5>
                </div>
                <div class="card-body">
                    {{ include('task/_form.html.twig', {'button_label': 'Update Task'}) }}
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i> Last updated: {{ task.createdAt ? task.createdAt|date('M j, Y \\a\\t g:i A') : 'N/A' }}
                        </small>
                        <div>
                            {{ include('task/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
