<form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" class="d-inline" 
      onsubmit="return confirm('⚠️ Are you sure you want to delete this task?\n\nTask: {{ task.title }}\n\nThis action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete Task">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>
